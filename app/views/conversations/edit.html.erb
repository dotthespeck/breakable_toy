<%= form_for (@conversation), :url => { :action => "update" } do |f| %>

<div class="row">
  <div class="small-12 columns">
    <div class="row">
      <div class="small-9 columns">
        <%= f.label :title %><br />
          <div class="field">
            <%= f.text_field :title, autofocus: true %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <div class="row">
      <div class="small-9 columns">
        <div class="edit_conversation">
        <%= f.submit 'Edit your conversation', class: 'btn-style' %>
      </div>
    </div>
  </div>
</div>
  <% end %>

  <div class="actions">
    <div class="row">
      <div class="small-9 columns">
        <div class="delete_conversation">
          <%= button_to 'Delete conversation', conversation_path(@conversation), class: 'btn-style', method: 'delete', data: { confirm: 'Are you sure? This will also erase all posts' } %>
        </div>
      </div>
    </div>
  </div>
