<%= form_for(@conversation) do |f| %>

  <% if @conversation.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{@conversation.errors.count} prevented the article from being saved" %></h2>
      <ul>
        <% @conversation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= f.label :post %><br />
  <%= f.text_field :post %>
</div>

<div class="actions">
  <%= f.submit "Submit" %>
</div>
<% end %>
