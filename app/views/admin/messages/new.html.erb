<%= form_for(@message, url: [:admin, @message]) do |f| %>

<% if @message.errors.any? %>
<div id="error_explanation">
  <h2><%= "#{@message.errors.count} error(s) prevented the post from being saved" %></h2>
  <ul>
    <% @message.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="small-12 columns">
    <div class="row">
      <div class="small-9 columns">
        <%= f.label :post %><br />
        <div class="field">
          <%= f.text_field :post %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="actions">
  <div class="row">
    <div class="small-9 columns">
      <%= f.submit 'Submit', class: 'btn-style' %>
    </div>
  </div>
</div>
<% end %>
