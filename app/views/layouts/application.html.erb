<!DOCTYPE html>
<html>
<head>
  <title>ChitChat</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <ul class="left">
      <li>
        <h3><a href="/">Welcome to ChitChat</a></h3>
      </li>
    </ul>

      <ul class="right">
        <%- if current_user -%>
          <li class="nav"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <%- else -%>
          <li class="nav"><%= link_to 'Sign Up', new_user_registration_path %> | <%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_tag do %>
    $(function(){
      $(document).foundation();
    });
  <% end %>

  <%= yield :extra_footer %>
</body>
</html>
