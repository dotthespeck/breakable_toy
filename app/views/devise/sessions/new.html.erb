<div class="row">
  <div class="small-12 columns"><h3 class="devise">Log in</h3></div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="small-9 columns">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :email %><br />
            <div class="field">
              <%= f.email_field :email, autofocus: true %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-9 columns">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :password %><br />
            <div class="field">
                <%= f.password_field :password, autofocus: true %>
            </div>
        </div>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="row">
    <div class="small-9 columns">
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  </div>
  <% end -%>

  <div class="actions">
    <div class="row">
      <div class="small-9 columns">
    <%= f.submit 'Log in', class: 'btn-style' %>
      </div>
    </div>
  </div>
<% end %>


<%= render "devise/shared/links" %>
