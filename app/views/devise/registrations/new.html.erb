<div class="row">
  <div class="small-12 columns"><h3 class="devise">Sign up</h3></div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="small-9 columns">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :email %>Email<br />
            <div class="field">
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="small-9 columns">
        <div class="row">
          <div class="small-3 columns">
            <%= f.label :user_name %>User name<br />
              <div class="field">
                <%= f.text_field :user_name, autofocus: true %>
              </div>
            </div>
          </div>
        </div>
      </div>

    <div class="row">
      <div class="small-9 columns">
        <div class="row">
          <div class="small-3 columns">
            <%= f.label :password %> <br />
              <div class="field">
                <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autofocus: true %>
              </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="small-9 columns">
        <div class="row">
          <div class="small-3 columns">
            <%= f.label :password_confirmation %> <br />
            <div class="field">
              <%= f.password_field :password_confirmation, autofocus: true %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="actions">
      <div class="row">
        <div class="small-9 columns">
          <%= f.submit 'Sign up', class: 'btn-style' %>
        </div>
      </div>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
