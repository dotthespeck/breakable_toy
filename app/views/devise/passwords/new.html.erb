<div class="row">
  <div class="small-12 columns"><h3 class="devise">Forgot your password?</h3></div>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="small-9 columns">
      <div class="row">
        <div class="small-3 columns">
          <f.label class="right">Email</label>
            <div class="field">
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="actions">
      <div class="row">
        <div class="small-9 columns">
          <%= f.submit 'Send me reset password instructions', class: 'btn-style' %>
        </div>
      </div>
    </div>
    <% end %>

<%= render "devise/shared/links" %>
